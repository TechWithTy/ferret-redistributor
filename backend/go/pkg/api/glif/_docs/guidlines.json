{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "GlifWorkflowGuidelines",
    "type": "object",
    "description": "Shared checklist for preparing inputs before invoking Glif workflows via Social Scale.",
    "properties": {
        "meta": {
            "type": "object",
            "properties": {
                "owner": { "type": "string", "default": "DealScale Automations" },
                "updated_at": { "type": "string", "format": "date-time" },
                "contact": { "type": "string", "default": "automation@dealscale.io" }
            },
            "required": ["owner"]
        },
        "inputs": {
            "type": "object",
            "properties": {
                "mode": {
                    "type": "string",
                    "enum": ["positional", "named"],
                    "description": "Choose one mode per request."
                },
                "required_fields": {
                    "type": "array",
                    "items": { "type": "string" },
                    "description": "Document the names of required inputs for this workflow."
                },
                "validators": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "field": { "type": "string" },
                            "type": { "type": "string" },
                            "pattern": { "type": "string" }
                        },
                        "required": ["field"]
                    }
                }
            }
        },
        "runtime": {
            "type": "object",
            "properties": {
                "strict": { "type": "boolean", "default": false },
                "visibility": {
                    "type": "string",
                    "enum": ["PRIVATE", "PUBLIC"],
                    "default": "PRIVATE"
                },
                "use_path_id": { "type": "boolean", "default": false }
            }
        },
        "output_processing": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": [
                    "download_asset",
                    "stream_json",
                    "trigger_follow_up_workflow",
                    "store_price"
                ]
            },
            "default": ["download_asset", "store_price"]
        }
    },
    "required": ["meta", "inputs"]
}


