#!/bin/sh

echo "Running go fmt..."
go fmt ./...

echo "Running golangci-lint..."
golangci-lint run

# If any of the above commands fail, prevent the commit
if [ $? -ne 0 ]; then
    echo "❌ Pre-commit checks failed. Please fix the issues and try again."
    exit 1
fi

echo "✅ Pre-commit checks passed!"
