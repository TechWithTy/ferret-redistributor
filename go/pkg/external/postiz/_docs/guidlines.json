{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "PostizSchedulingGuidelines",
    "type": "object",
    "description": "Reusable checklist for preparing social content before pushing to Postiz via the Ferret Go SDK.",
    "properties": {
        "meta": {
            "type": "object",
            "properties": {
                "brand": { "type": "string", "default": "DealScale" },
                "language": { "type": "string", "default": "en" },
                "timezone": { "type": "string", "default": "UTC" },
                "author": { "type": "string", "default": "Automation" }
            },
            "required": ["brand"]
        },
        "post_template": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["draft", "schedule", "now"],
                    "default": "schedule"
                },
                "short_link": { "type": "boolean", "default": true },
                "tags": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "label": { "type": "string" },
                            "value": { "type": "string" }
                        },
                        "required": ["value"]
                    }
                },
                "content_pillars": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": ["educational", "product", "customer", "community", "announcement"]
                    },
                    "default": ["educational", "product"]
                },
                "cta_examples": {
                    "type": "array",
                    "items": { "type": "string" },
                    "default": [
                        "Join the waitlist â†’ {link}",
                        "Reply READY for the checklist",
                        "Drop a ðŸ”¥ if you want the template"
                    ]
                }
            }
        },
        "media": {
            "type": "object",
            "properties": {
                "aspect_ratio": { "type": "string", "enum": ["1:1", "4:5", "9:16"], "default": "4:5" },
                "min_resolution": { "type": "string", "default": "1080x1350" },
                "allow_video": { "type": "boolean", "default": true },
                "max_images": { "type": "integer", "default": 4 }
            }
        },
        "workflow": {
            "type": "array",
            "description": "Operational checklist executed before scheduling via the API.",
            "items": { "type": "string" },
            "default": [
                "Sync integrations via GET /integrations",
                "Find slot per integration (GET /find-slot/:id)",
                "Upload assets (POST /upload or /upload-from-url)",
                "Compose payload with grouped posts + tags",
                "POST /posts with type schedule",
                "Record response IDs for monitoring"
            ]
        }
    },
    "required": ["meta", "workflow"]
}

