{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "LinkedInContentGuidelines",
    "type": "object",
    "description": "Reusable schema defining structure, tone, creative, and posting guidelines for LinkedIn content (posts, carousels, reels, articles).",
    "properties": {
        "meta": {
            "type": "object",
            "properties": {
                "brand": {
                    "type": "string",
                    "default": "DealScale.io"
                },
                "updated_at": {
                    "type": "string",
                    "format": "date-time"
                },
                "author": {
                    "type": "string",
                    "default": "Ty (CTO)"
                },
                "language": {
                    "type": "string",
                    "default": "en"
                },
                "target_audience": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "Founders",
                        "Real Estate Investors",
                        "SaaS Builders",
                        "Marketers"
                    ]
                }
            },
            "required": [
                "brand"
            ]
        },
        "formats": {
            "type": "array",
            "description": "Each LinkedIn content format with creative and engagement rules.",
            "items": {
                "type": "object",
                "properties": {
                    "format": {
                        "type": "string",
                        "enum": [
                            "post",
                            "carousel",
                            "article",
                            "reel"
                        ]
                    },
                    "recommended_length": {
                        "type": "object",
                        "properties": {
                            "min_chars": {
                                "type": "integer",
                                "default": 300
                            },
                            "max_chars": {
                                "type": "integer",
                                "default": 2500
                            },
                            "ideal_paragraphs": {
                                "type": "integer",
                                "default": 3
                            }
                        }
                    },
                    "visual_guidelines": {
                        "type": "object",
                        "properties": {
                            "aspect_ratio": {
                                "type": "string",
                                "enum": [
                                    "1:1",
                                    "4:5",
                                    "16:9"
                                ],
                                "default": "4:5"
                            },
                            "preferred_resolution": {
                                "type": "string",
                                "default": "1080x1350"
                            },
                            "branding": {
                                "type": "string",
                                "default": "Top-right logo overlay with brand colors (#002244, #00B3A4, #FF6B35)"
                            },
                            "font_style": {
                                "type": "string",
                                "default": "Inter, sans-serif"
                            },
                            "thumbnail_text": {
                                "type": "boolean",
                                "default": true,
                                "description": "Use clear readable cover text for carousels/reels."
                            }
                        }
                    },
                    "caption_guidelines": {
                        "type": "object",
                        "properties": {
                            "hook_first_line": {
                                "type": "boolean",
                                "default": true,
                                "description": "First sentence must hook attention and drive expansion clicks."
                            },
                            "structure": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                },
                                "default": [
                                    "Hook (pain, insight, or bold statement)",
                                    "Body (value, steps, or insight)",
                                    "CTA (engagement or conversion)"
                                ]
                            },
                            "voice_tone": {
                                "type": "string",
                                "enum": [
                                    "educational",
                                    "storytelling",
                                    "thought_leadership",
                                    "personal"
                                ],
                                "default": "educational"
                            },
                            "cta_examples": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                },
                                "default": [
                                    "Comment your thoughts below 👇",
                                    "Save this post for your next strategy sprint",
                                    "DM me ‘READY’ for the template",
                                    "Tag a founder who needs this insight"
                                ]
                            }
                        }
                    },
                    "hashtag_strategy": {
                        "type": "object",
                        "properties": {
                            "recommended_count": {
                                "type": "integer",
                                "default": 5
                            },
                            "placement": {
                                "type": "string",
                                "enum": [
                                    "end",
                                    "middle"
                                ],
                                "default": "end"
                            },
                            "mix_strategy": {
                                "type": "string",
                                "default": "1 trending, 2 niche, 2 brand hashtags"
                            },
                            "examples": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                },
                                "default": [
                                    "#DealScale",
                                    "#StartupGrowth",
                                    "#RealEstateAI",
                                    "#SaaSMarketing",
                                    "#B2BSales"
                                ]
                            }
                        }
                    },
                    "content_pillars": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "enum": [
                                "educational",
                                "thought_leadership",
                                "founder_story",
                                "case_study",
                                "trend",
                                "community"
                            ]
                        },
                        "default": [
                            "educational",
                            "thought_leadership",
                            "founder_story"
                        ]
                    },
                    "creative_tips": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "default": [
                            "Use line breaks for readability (2-3 sentences max per block).",
                            "Add emojis to guide scanning but don’t overuse them.",
                            "Tag companies or people only when contextually relevant.",
                            "End with a question to drive comments."
                        ]
                    },
                    "posting": {
                        "type": "object",
                        "properties": {
                            "frequency": {
                                "type": "string",
                                "enum": [
                                    "daily",
                                    "3-4x_week",
                                    "weekly"
                                ],
                                "default": "3-4x_week"
                            },
                            "best_times": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                },
                                "default": [
                                    "08:00",
                                    "11:30",
                                    "17:00"
                                ]
                            },
                            "engagement_window_minutes": {
                                "type": "integer",
                                "default": 45,
                                "description": "Engage within 45 minutes after posting for visibility."
                            }
                        }
                    },
                    "example_post": {
                        "type": "object",
                        "properties": {
                            "title": {
                                "type": "string",
                                "example": "Why 80% of SaaS Founders Waste Time on Leads That Never Close"
                            },
                            "caption": {
                                "type": "string",
                                "example": "Most teams chase quantity, not intent. At DealScale, we flipped it. Here's how we qualified 3x faster using AI scoring 🔍"
                            },
                            "hashtags": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                },
                                "default": [
                                    "#AILeads",
                                    "#B2BSaaS",
                                    "#StartupGrowth"
                                ]
                            },
                            "cta": {
                                "type": "string",
                                "default": "Follow for weekly growth frameworks 🚀"
                            }
                        }
                    }
                },
                "required": [
                    "format"
                ]
            }
        },
        "workflow_checklist": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "default": [
                "Research trending or valuable topic for ICP",
                "Draft hook, story, and CTA",
                "Create visual assets (carousel/reel thumbnails)",
                "Edit for clarity, format for mobile readability",
                "Add relevant hashtags and tag collaborators",
                "Post at optimal time window",
                "Engage with comments for first 45 mins",
                "Review analytics after 48 hrs"
            ]
        },
        "setup_plan": {
            "type": "object",
            "description": "Step-by-step plan to set up LinkedIn posting and CI automation.",
            "properties": {
                "prerequisites": {
                    "type": "array",
                    "items": { "type": "string" },
                    "default": [
                        "LinkedIn Developer App created",
                        "Enable Posts API / w_member_social scope",
                        "Obtain member access token for target account",
                        "Confirm account can post (no API restrictions)"
                    ]
                },
                "env_vars": {
                    "type": "array",
                    "items": { "type": "string" },
                    "default": [
                        "LINKEDIN_ACCESS_TOKEN",
                        "BASE_URL (article host)",
                        "DOES_META_OG_IMAGE_HAS_RELATIVE_PATH (true|false)"
                    ]
                },
                "github_actions": {
                    "type": "object",
                    "properties": {
                        "secrets": {
                            "type": "array",
                            "items": { "type": "string" },
                            "default": [
                                "LINKEDIN_ACCESS_TOKEN"
                            ]
                        },
                        "variables": {
                            "type": "array",
                            "items": { "type": "string" },
                            "default": [
                                "MASTODON_INSTANCE_URL",
                                "FACEBOOK_PAGE_ID",
                                "THREAD_USER_ID"
                            ]
                        },
                        "cron_example": {
                            "type": "string",
                            "default": "*/30 * * * *"
                        }
                    }
                },
                "steps": {
                    "type": "array",
                    "items": { "type": "string" },
                    "default": [
                        "Create a LinkedIn developer app and request w_member_social",
                        "Complete OAuth to obtain an access token for the posting account",
                        "Store token in GitHub secret LINKEDIN_ACCESS_TOKEN",
                        "Add 'linkedin' to config.json socials array",
                        "Run Ferret locally to verify a sample post",
                        "Enable GitHub Action schedule to automate posts"
                    ]
                },
                "notes": {
                    "type": "array",
                    "items": { "type": "string" },
                    "default": [
                        "Images: OG image is fetched from article and uploaded via LinkedIn Images API before posting",
                        "Captions: use guidelines above; links auto-expand in preview",
                        "No public webhooks for comments; consider manual monitoring or external tools if needed"
                    ]
                }
            }
        }
    },
    "required": [
        "meta",
        "formats"
    ]
}
